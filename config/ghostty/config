# tip is the nightly version
auto-update-channel = stable

# Font
font-family = JetBrains Mono
font-size = 18

# Theme
theme = light:Gruvbox Light,dark:Gruvbox Dark
window-theme = system

# Use the block non-blinking cursor everywhere
shell-integration-features = no-cursor
cursor-style-blink = false

# Use a light color (cursor-color)
# Refer: /Applications/Ghostty.app/Contents/Resources/ghostty/themes/GruvboxDark
split-divider-color = "#ebdbb2"

# Mouse
# mouse-hide-while-typing = true
mouse-scroll-multiplier = 2

# macOS specific
macos-option-as-alt = left
macos-titlebar-style = tabs

# Use arbitrary large value to create a maximized-by-default window size
window-height = 1000
window-width = 1000

# Keybindings
# N.B. super is an alias to the command key
keybind = super+shift+r=reload_config
keybind = global:ctrl+shift+q=toggle_quick_terminal

keybind = ctrl+shift+t=new_tab
keybind = ctrl+shift+.=move_tab:+1
keybind = ctrl+shift+,=move_tab:-1

keybind = ctrl+shift+backslash=new_split:right
keybind = ctrl+shift+-=new_split:down

keybind = ctrl+shift+k=goto_split:up
keybind = ctrl+shift+l=goto_split:right
keybind = ctrl+shift+j=goto_split:down
keybind = ctrl+shift+h=goto_split:left

keybind = ctrl+shift+space=toggle_split_zoom

keybind = ctrl+shift+f=jump_to_prompt:-1
keybind = ctrl+shift+b=jump_to_prompt:+1

