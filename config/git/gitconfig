[core]
	editor = nvim
	excludesfile = ~/.ignore
	ignorecase = false
	pager = delta

[alias]
	c = commit
	cl = clone
	br = branch
	co = checkout
	nb = checkout -b
	st = status -sb

	# Sync with upstream HEAD branch
	sync = !git pull upstream HEAD && git push

	# View abbreviated SHA, description, and history graph of the latest 10 commits.
	l = log --oneline -n 10 --graph
	la = log --oneline -n 10 --graph --all

	# Undo/ammend the last commit
	undo = reset --soft HEAD~1
	ammend = commit --ammend

	# Show verbose output about tags, branches or remotes
	tags = tag -l
	branches = branch --all
	remotes = remote --verbose

	# List aliases
	aliases = config --get-regexp alias

	# Enhance git diff with delta
	delta = "!f() { git diff \"$@\" | delta; }; f"

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold # line info
	old = red # deletions
	new = green # additions

[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[commit]
	gpgsign = true
	template = ~/.gitmessage

[diff]
	# Enable experimental heuristics that shift diff hunk boundaries to make
	# patches easier to read
	indentHeuristic = true

[gpg]
	program = gpg

[init]
	defaultBranch = main

[delta]
	syntax-theme = gruvbox-dark
	line-numbers = true
	features = styles

[delta "styles"]
	plus-style = syntax "#003800"
	minus-style = syntax "#3f0001"
	commit-style = yellow bold auto
	file-style = bold yellow ul
	file-decoration-style = none
	hunk-header-decoration-style = cyan box ul

[include]
	path = ~/.gitconfig.local

# vim: set ft=gitconfig:
