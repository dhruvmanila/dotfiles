# vim: set ft=gitconfig:
[user]
	name = Dhruv Manilawala
	email = dhruvmanila@gmail.com
	signingkey = 9601911DE8797432

[core]
	editor = nvim
	# Use custom `.gitignore`
	excludesfile = ~/.gitignore
	ignorecase = false

[alias]
	c = commit
	cl = clone
	br = branch
	co = checkout
	nb = checkout -b
	st = status -sb

	# View abbreviated SHA, description, and history graph of the latest 10 commits.
	l = log --oneline -n 10 --graph
	la = log --oneline -n 10 --graph --all
	undo = reset --soft HEAD~1 # Undo your last commit
	ammend = commit --ammend # ammend your last commit

	# Show verbose output about tags, branches or remotes
	tags = tag -l
	branches = branch --all
	remotes = remote --verbose

	# List aliases.
	aliases = config --get-regexp alias

	# Enhance git diff with delta
	delta = "!f() { git diff \"$@\" | delta; }; f"

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold # line info
	old = red # deletions
	new = green # additions

[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[commit]
	gpgsign = true
	template = ~/.gitmessage

[gpg]
	program = gpg

[init]
	defaultBranch = main

[delta]
	syntax-theme = gruvbox-dark
	line-numbers = true
	side-by-side = true
	features = styles

[delta "styles"]
	plus-style = syntax "#003800"
	minus-style = syntax "#3f0001"
	commit-style = yellow bold auto
	file-style = bold yellow ul
	file-decoration-style = none
	hunk-header-decoration-style = cyan box ul
