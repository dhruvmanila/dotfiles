#!/usr/bin/env bash
# vim: set filetype=ruby:
# b - browse Brave bookmarks with fzf
# https://junegunn.kr/2015/04/browsing-chrome-bookmarks-with-fzf

[ $(uname) = Darwin ] || exit 1
which fzf > /dev/null 2>&1 || brew reinstall --HEAD fzf || exit 1

/usr/bin/ruby -x "$0"                                     |
  fzf --ansi --multi --no-hscroll --tiebreak=begin |
  awk 'BEGIN { FS = "\t" } { print $2 }'                  |
  xargs open

exit $?

#!ruby
# encoding: utf-8

require 'json'
FILE = '~/Library/Application Support/BraveSoftware/Brave-Browser/Default/Bookmarks'
CJK  = /\p{Han}|\p{Katakana}|\p{Hiragana}|\p{Hangul}/

# Build the entries by recursively entering every folder and collecting the
# name and url information for the entry.
def build parent, json
  # compact removes all the nil values
  # We don't want the bookmark category to be included
  name = if parent then [parent, json['name']].compact.join('/') else '' end
  if json['type'] == 'folder'
    json['children'].map { |child| build name, child }
  else
    { name: name, url: json['url'] }
  end
end

def just str, width
  str.ljust(width - str.scan(CJK).length)
end

def trim str, width
  len = 0
  str.each_char.each_with_index do |char, idx|
    len += char =~ CJK ? 2 : 1
    return str[0, idx] if len > width
  end
  str
end

# Current width of the terminal
width = `tput cols`.strip.to_i / 2
json  = JSON.load File.read File.expand_path FILE

# {
#   "checksum": ...,
#   "roots": {
#     "bookmark_bar": {
#       ...
#     },
#     "synced": {
#       ...
#     },
#     "other": {
#       ...
#     }
#   }
# }
items = json['roots']
        .values_at(*%w(bookmark_bar synced other))
        .compact  # remove all the nil values
        .map { |e| build nil, e }
        .flatten

items.each do |item|
  name = trim item[:name], width
  puts [just(name, width),
        item[:url]].join("\t\x1b[36m") + "\x1b[m"
end
